{
    "version": 8,
    "name": "Map Test",
    "sources": {
        "local-mbtiles": {
            "type": "vector",
            "url": "mbtiles://{{LOCAL_FILE_PATH_WITHOUT_PREFIX}}"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {"background-color": "#F9F9F9"}
        },
        {
            "id": "water",
            "type": "fill",
            "source": "local-mbtiles",
            "source-layer": "water",
            "paint": {"fill-color": "#AED5E8"}
        },
        {
            "id": "landcover",
            "type": "fill",
            "source": "local-mbtiles",
            "source-layer": "landcover",
            "paint": {"fill-color": "#AED574"}
        },
        {
            "id": "transportation",
            "type": "line",
            "source": "local-mbtiles",
            "source-layer": "transportation",
            "paint": {
                "line-color": "#edebeb",
                "line-width": 1.5
            }
        },
        {
            "id": "landuse",
            "type": "fill",
            "source": "local-mbtiles",
            "source-layer": "landuse",
            "paint": {"fill-color": "#E9DFC4"}
        },
        {
            "id": "building",
            "type": "fill",
            "source": "local-mbtiles",
            "source-layer": "building",
            "paint": {"fill-color": "#d1d1d1"}
        },
        {
            "id": "poi-labels",
            "type": "symbol",
            "source": "local-mbtiles",
            "source-layer": "poi",
            "minzoom": 13,
            "filter": ["has", "name"],            
            "layout": {
                "text-field": ["get", "name"],
                "text-font": ["Open Sans Regular"],
                "text-size": 12,
                "text-allow-overlap": false
            },
            "paint": {
                "text-color": "#333",
                "text-halo-color": "#fff",
                "text-halo-width": 1
            }
        }
    ]
}
